import {Block} from "org/mdspex/ASTNodes";
import {Assert} from "n4/mangel/assert/Assert";
import {Document} from "org/mdspex/ASTNodes";

const doc = new Document();

export public class ElementAchorTests {

	@Test
	public testAnchorFQN_Simple() {
		let b = new Block("e", 0, doc);
		b.setAnchor("type", "name", undefined);
		Assert.equal(b.anchor.type, "type");
		Assert.equal(b.anchor.name, "name");
		Assert.equal(b.anchor.fqn.toString(), "type:name");
	}

	@Test
	public testAnchorFQN_Norm2() {
		let b = new Block("e", 0, doc);
		b.setAnchor("type", "..i!!d??", undefined);
		Assert.equal(b.anchor.fqn.toString(), "type:i_d");
	}

}
